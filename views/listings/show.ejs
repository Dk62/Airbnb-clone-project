<%- layout("/layouts/boilerplates") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3> Listing Details : </h3>
        </div>
        <div class="card col-6 offset-2 show-card">
            <img src="<%= listing.image.url ? listing.image.url : listing.image %>" class="card-img-top show-img"
                alt="listing_image">
            <div class="card-body ">
                <p class="card-text">
                    <b>
                        <%= listing.title %>
                    </b> <br />
                    <%= listing.description %> <br />
                        &#x2089 <%= Number(listing.price || 0).toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
            <br /> <br />
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>

    </div>